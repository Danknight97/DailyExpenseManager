<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_x="152sp"
        android:layout_y="82sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="86sp"
        android:layout_height="29sp"
        android:layout_x="20dp"
        android:layout_y="79dp"
        android:text="Category:" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="82sp"
        android:layout_height="35sp"
        android:layout_x="21dp"
        android:layout_y="130dp"
        android:text="Date:" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="16dp"
        android:ems="10"
        android:hint="Price"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="101sp"
        android:layout_height="42sp"
        android:layout_x="22dp"
        android:layout_y="254dp"
        android:text="Payment Mode:" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="166sp"
        android:layout_height="45sp"
        android:layout_x="140dp"
        android:layout_y="252dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="270dp"
        android:layout_height="57dp"
        android:layout_x="24dp"
        android:layout_y="183dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/bdate"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_x="190dp"
        android:layout_y="122dp"
        android:background="@drawable/cal"

        />

    <Button
        android:id="@+id/button3"
        android:layout_width="224sp"
        android:layout_height="65sp"
        android:layout_x="69dp"
        android:layout_y="374dp"
        android:text="Add" />

</AbsoluteLayout>